<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154260"
    tools:context=".changeEmail">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Change your Email Address"
        android:textColor="#FF085E"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_edit_text_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Enter Your Current Email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/password_edit_text_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Enter your Current Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/newemail_edit_text_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Enter New Email Address"
            android:inputType="textEmailAddress"
            android:padding="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:padding="10dp"
        android:text="Update"
        android:textSize="20sp"
        app:backgroundTint="#8A760F" />

</RelativeLayout>